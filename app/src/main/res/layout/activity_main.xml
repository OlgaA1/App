<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity"
    android:background="@color/colorYellow"
    >

    <TextView
        android:id="@+id/textView"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="170dp"
        android:layout_width="209dp" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/passwordText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameText"/>

    <Button
        android:id="@+id/SignUp"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:hint="Sign Up"
        android:textSize="15sp"
        android:layout_margin="40dp"
        android:textColorHint="@color/colorBlack"
        android:paddingTop="19.dp"
        android:paddingLeft="25.dp"
        android:paddingRight="25.dp"
        app:layout_constraintTop_toBottomOf="@id/LogIn"
        app:layout_constraintRight_toRightOf="@id/passwordText"
        app:layout_constraintLeft_toLeftOf="@id/passwordText"/>

    <Button
        android:id="@+id/LogIn"
        android:layout_width="75.dp"
        android:layout_height="50dp"
        android:hint="Log In "
        android:textSize="15.5sp"
        android:layout_margin="10dp"
        android:textColorHint="@color/colorBlue"
        app:layout_constraintTop_toBottomOf="@id/passwordText"
        app:layout_constraintRight_toRightOf="@id/SignUp"/>

        <TextView
            android:id="@+id/Info"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:hint= "Info"
            android:textSize="15dp"
            android:textColorHint="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="@id/LogIn"
            app:layout_constraintTop_toBottomOf="@id/LogIn"
            app:layout_constraintRight_toRightOf="@id/LogIn"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="255dp"
        app:srcCompat="@drawable/drawablelogo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="45dp" />



</androidx.constraintlayout.widget.ConstraintLayout>