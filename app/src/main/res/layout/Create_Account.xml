<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Account">

        <TextView
            android:id="@+id/title"
            android:text="FITBOOST"
            android:layout_width="wrap_content"
            android:layout_height="56sp"
            android:textSize="45sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.0"/>

        <ImageView
            android:layout_width="209dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/drawablelogo"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="66dp"/>


        <EditText
            android:id="@+id/name_text1"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteX="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="258dp"/>


        <EditText
            android:id="@+id/editText2"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:text="Username"
            tools:layout_editor_absoluteY="303dp"
            tools:layout_editor_absoluteX="32dp"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="213dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteX="32dp"
            android:text="Password"
            tools:layout_editor_absoluteY="339dp"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="213dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="384dp"
            tools:layout_editor_absoluteX="32dp"
            android:text="Age"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="213dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="474dp"
            tools:layout_editor_absoluteX="32dp"
            android:text="Weight"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="213dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="429dp"
            tools:layout_editor_absoluteX="32dp"
            android:text="Sex"/>

        <EditText
            android:id="@+id/editText7"
            android:layout_width="213dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="519dp"
            tools:layout_editor_absoluteX="32dp"
            android:text="Zipcode:"/>


        <EditText
            android:id="@+id/editText8"
            android:layout_width="213dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="564dp"
            tools:layout_editor_absoluteX="32dp"
            android:text="BMI:"/>

        <Button
            android:text="Create Account"
            android:layout_width="147dp"
            android:layout_height="47dp"
            android:id="@+id/button"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:gravity="center"
            tools:layout_editor_absoluteY="609dp"
            tools:layout_editor_absoluteX="56dp"
            android:layout_alignParentLeft="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/FITBOOST"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbHorizontal="@drawable/rounded_corners">

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>